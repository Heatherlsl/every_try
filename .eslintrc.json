{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "vue",
        "html"
    ],
    "rules": {
        "no-multiple-empty-lines": 2,
        "space-in-parens": 2,
        "eol-last": [
            2,
            "always"
        ],
        "semi": [
            2,
            "always"
        ],
        "quotes": [
            2,
            "double"
        ],
        "prefer-promise-reject-errors": 1,
        "no-extend-native": 1,
        "no-proto": 1,
        "no-unused-vars": 1,
        "eqeqeq": 1,
        "camelcase": 1,
        "brace-style": 1,
        "no-mixed-operators": 1
    }
}